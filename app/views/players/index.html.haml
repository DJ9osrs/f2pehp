      = content_tag(:div, nil, style: "background-color: rgba(0,0,0,0.5); border: 1px solid black; border-bottom: none; text-align: center; width: 380px; margin: auto;") do 
        %h1
          = link_to "Top 25 F2P OSRS Players", ranks_path
      = content_tag(:table, nil, style: "text-align: center; width: 380px; padding: 5px;") do 
        %thead
          %tr
            %th Rank
            %th Name
            %th Account Type
            %th Overall EHP
        %tbody
          - Player.where("overall_ehp > 2000").order('overall_ehp').reverse.first(25).each.with_index 1 do |player, index|
            %tr
              %td{:align => "right"}= index
              %td= link_to player.player_name, player
              %td{:align => "center"}= player.player_acc_type
              %td= player.overall_ehp
              
    