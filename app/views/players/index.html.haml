        = link_to "F2P Lukie", "players/F2P_Lukie"
        %br
        = link_to "Tame My Wild", "players/Tame_My_Wild"
        %br
        = link_to "Scincoidea", "players/Scincoidea"
        %br
        = link_to "Pawz", "players/Pawz"
        %br
        = link_to "IronMace Din", "players/IronMace_Din"
        %br
        = link_to "HCIM_btw_fev", "players/HCIM_btw_fev"
        %br
        = link_to "citnA", "players/citnA"
        %br
        = link_to "Based Chew", "players/Based_Chew"
        %br
        = link_to "lRAIDERSS", "players/lRAIDERSS"
