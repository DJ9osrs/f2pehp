%h1 
  = F2POSRSRanks::Application.config.version
= "by unkie, shoot me an email/send feedback at f2posrsranks@gmail.com"
%br
%br
= link_to 'Back', players_path
%br
%br
= "NOTE: F2P IM/HCIM Smithing EHP is adjusted as follows:"
%br
= "smithing ehp = (smith_xp - craft_xp/(51.25*13.7))/smith_ehp_rate"
%br
= "This calculation ensures that crafting silver does not count double towards EHP."
%br
%br

- f2p_skills = F2POSRSRanks::Application.config.f2p_skills
- ehp_reg = F2POSRSRanks::Application.config.ehp_reg
- ehp_iron = F2POSRSRanks::Application.config.ehp_iron
- ehp_uim = F2POSRSRanks::Application.config.ehp_uim

%table
  %thead
    %tr
      %th Skill
      %th Reg EHP
      %th IM/HCIM EHP
      %th UIM EHP
  %tbody
    - f2p_skills.each do |skill|
      %tr
        %td= skill
        %td{:align => "center"}
          - ehp_reg["#{skill}_tiers"].each.with_index do |tier, idx|
            = "#{tier} xp: #{ehp_reg["#{skill}_xphrs"][idx]} xp/hr"
            %br
        %td{:align => "center"}
          - ehp_iron["#{skill}_tiers"].each.with_index do |tier, idx|
            = "#{tier} xp: #{ehp_iron["#{skill}_xphrs"][idx]} xp/hr"
            %br
        %td{:align => "center"}
          - ehp_uim["#{skill}_tiers"].each.with_index do |tier, idx|
            = "#{tier} xp: #{ehp_uim["#{skill}_xphrs"][idx]} xp/hr"
            %br

%br
= "NOTE: F2P IM/HCIM Smithing EHP is adjusted as follows:"
%br
= "smithing ehp = (smith_xp - craft_xp/(51.25*13.7))/smith_ehp_rate"
%br
= "This calculation ensures that crafting silver does not count double towards EHP."
%br
%br
= link_to 'Back', players_path
