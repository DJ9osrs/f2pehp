    - ["Prayer", "Cooking", "Firemaking", "Crafting", "Smithing", "Runecraft"].each do |skill|
      %h5 #{skill}
      = content_tag(:table, nil, class: ["blank"], style: "width: 380px;") do 
        %tr
          %th Item
          %th XP
          %th Buy
          %th Sell
          %th Net cost
          %th GP/XP
        - skill_items["#{skill}"].each do |item|
          %tr
            %td= item[0]
            %td= item[1]
            %td= item[2]
            %td= item[3]
            %td= item[2] - item[3]
            %td= number_with_precision((item[2] - item[3])/item[1], :precision => 2)
      %br
    = "all item values obtained from OSBuddy; inactive prices redirected to OSRS GE"