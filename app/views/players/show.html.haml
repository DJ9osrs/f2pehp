      %td= @player.hitpoints_ehp
    %tr
      %th{:align => "left"} Ranged
      %td= @player.ranged_xp
      %td= @player.ranged_lvl
      %td= @player.ranged_ehp
    %tr
      %th{:align => "left"} Prayer
      %td= @player.prayer_xp
      %td= @player.prayer_lvl
      %td= @player.prayer_ehp
    %tr
      %th{:align => "left"} Magic
      %td= @player.magic_xp
      %td= @player.magic_lvl
      %td= @player.magic_ehp
    %tr
      %th{:align => "left"} Cooking
      %td= @player.cooking_xp
      %td= @player.cooking_lvl
      %td= @player.cooking_ehp
    %tr
      %th{:align => "left"} Woodcutting
      %td= @player.woodcutting_xp
      %td= @player.woodcutting_lvl
      %td= @player.woodcutting_ehp
    %tr
      %th{:align => "left"} Fishing
      %td= @player.fishing_xp
