= content_tag(:div, nil, style: "text-align: center; margin: auto; width: 300px; padding: 5px;") do 
  %h1 
    = F2POSRSRanks::Application.config.version
  = "please feel free to send any feedback to f2posrsranks@gmail.com"
  %br
  %p#notice= notice
  = link_to 'Back', players_path
  %br
  //= link_to "Useful Links", links_path
  //%br
  = link_to "View EHP Rates", ehp_path
  %br
  = link_to "View Hall of Shame", fake_path
  %br
  = link_to "About Us/Donations", donate_path
  
%br  
= content_tag(:div, nil, style: "text-align: center; margin: auto; width: 185px; padding: 5px; margin-bottom: 10px;") do 
  %h1 Player Stats
  = form_tag players_path(@player), :method => :put do
    = link_to 'Update Player Stats', @player, method: :update_player

= content_tag(:table, nil, style: "text-align: center; margin: auto; width: 200px; min-width: 200px; padding: 5px; margin-bottom: 10px;") do 
  %tbody
    %tr
      %th{:align => "left"} Player Name 
      %td= @player.player_name
    %tr
      %th{:align => "left"} Account Type 
      %td= @player.player_acc_type

%br
= content_tag(:table, nil, style: "text-align: center; margin: auto; max-width: 600px; min-width: 300px; padding: 5px; margin-bottom: 10px;") do 
  %thead
    %th{:align => "center"}  
    %th{:align => "center"}  XP
    %th{:align => "center"}  Level
    %th{:align => "center"}  EHP
  %tbody
    %tr
      %th{:align => "left"} Overall
      %td= @player.overall_xp
      %td= @player.overall_lvl
      %td= @player.overall_ehp
    %tr
      %th{:align => "left"} Attack
      %td= @player.attack_xp
